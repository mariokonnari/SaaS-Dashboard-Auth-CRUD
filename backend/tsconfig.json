  "compilerOptions": {
    "target": "ES2020",                      
    "module": "commonjs",
    "rootDir": "./src",                      
    "outDir": "./dist",
    
    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["prisma.config.ts"]
}